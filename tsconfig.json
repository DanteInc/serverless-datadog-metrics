        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "lib",
        "lib": [
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },  
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.test.ts"
    ]
}
